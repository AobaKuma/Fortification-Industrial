 <ThingDef ParentName="ResourceBase">
    <defName>FT_BlocksConcrete</defName>
    <label>concrete</label>
    <description>Blocks of solid concrete. Concrete is a strong building material but ugly to look at.</description>
    <graphicData>
      <texPath>ConcreteBag</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
	<soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <tradeability>Buyable</tradeability>
	<statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <MarketValue>0.9</MarketValue>
      <SharpDamageMultiplier>0.6</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.0</BluntDamageMultiplier>
      <Beauty>-10</Beauty>
      <ConstructionSpeedFactor>0.9</ConstructionSpeedFactor>
      <Mass>0.75</Mass>
    </statBases>
    <burnableByRecipe>false</burnableByRecipe>
    <minRewardCount>10</minRewardCount>
    <thingCategories>
      <li>StoneBlocks</li>
    </thingCategories>
    <stuffProps>
	  <categories>
        <li>Stony</li>
      </categories>
	  <commonality>0.20</commonality>
	  <color>(150,150,150)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>concrete</stuffAdjective>
      <appearance>Concrete</appearance>
	  <statFactors>
		<Beauty>0.1</Beauty>  
        <MarketValue>0.75</MarketValue>
        <MaxHitPoints>2.0</MaxHitPoints>
        <Flammability>0</Flammability>
        <WorkToBuild>2.0</WorkToBuild>
        <WorkToMake>0.75</WorkToMake>
        <DoorOpenSpeed>0.25</DoorOpenSpeed>
        <BedRestEffectiveness>0.85</BedRestEffectiveness>
        <MeleeWeapon_CooldownMultiplier>1.30</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
    </stuffProps>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
  </ThingDef>  

