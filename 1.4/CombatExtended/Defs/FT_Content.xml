<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>FT_TurretAT_Plus</defName>
		<label>76mm anti-tank gun</label>
		<description>A direct-fire cannon with capability to destroy a heavy armed vehicle.</description>
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>InfantryTurret/FT_HexMortarBase</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.25,3.25)</drawSize>
			<drawOffset>(0,0,-0.1)</drawOffset>
		</graphicData>
		<size>(3,3)</size>
		<thingClass>CombatExtended.Building_TurretGunCE</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(-1,0,-1)</interactionCellOffset>
		<stealable>false</stealable>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<fillPercent>0.85</fillPercent>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<tickerType>Normal</tickerType>
		<designationCategory>Security</designationCategory>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
			<li>PlaceWorker_TurretTop</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<specialDisplayRadius>5</specialDisplayRadius>
		<researchPrerequisites>
			<li>FT_HeavyArtillery</li>
		</researchPrerequisites>
		<comps>
			<!--<li Class="CompProperties_Explosive">
				<wickTicks>240</wickTicks>
				<explosiveRadius>4.9</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
			</li>-->
			<li Class="CompProperties_Forbiddable" />
			<li Class="CompProperties_Mannable">
				<manWorkType>Violent</manWorkType>
			</li>
			<li Class="VanillaFurnitureExpanded.CompProperties_RandomBuildingGraphic">
				<randomGraphics>
					<li>InfantryTurret/FT_HexMortarBase</li>
					<li>InfantryTurret/FT_HexMortarBase_Sec</li>
					<li>FT_ConcreteArtilleryBase/TurretArtillery_Base_Heavy</li>
					<li>FT_ConcreteArtilleryBase/TurretArtillery_Base_Wheel_Sec</li>
				</randomGraphics>
			</li>
		</comps>
		<statBases>
			<Mass>255</Mass>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<WorkToBuild>3500</WorkToBuild>
			<Beauty>-2</Beauty>
		</statBases>
		<costList>
			<Steel>450</Steel>
			<ComponentIndustrial>6</ComponentIndustrial>
			<ReinforcedBarrel>2</ReinforcedBarrel>
		</costList>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<building>
			<turretBurstWarmupTime>3.0</turretBurstWarmupTime>
			<turretBurstCooldownTime>1.0</turretBurstCooldownTime>
			<turretTopDrawSize>4</turretTopDrawSize>
			<turretGunDef>FT_Gun_TurretAT_Plus</turretGunDef>
		</building>
		<uiIconPath>InfantryTurret/FT_AntiTankGunPlus_Icon</uiIconPath>
		<uiIconScale>1.2</uiIconScale>
			<damageMultipliers>
		  <li>
			<damageDef>EMP</damageDef>
			<multiplier>0</multiplier>
		  </li>
		  <li>
			<damageDef>Stun</damageDef>
			<multiplier>0</multiplier>
		  </li>
		  <li MayRequire="Ludeon.RimWorld.Biotech">
				<damageDef>MechBandShockwave</damageDef>
				<multiplier>0</multiplier>
		  </li>
		  <li MayRequire="CETeam.CombatExtended">
				<damageDef>Electrical</damageDef>
				<multiplier>0</multiplier>
		  </li>
	</damageMultipliers>
	</ThingDef>

	<ThingDef ParentName="BaseWeaponTurret">
		<defName>FT_Gun_TurretAT_Plus</defName>
		<label>76mm anti-tank gun</label>
		<description>A direct-fire cannon with capability to destroy a heavy armed vehicle.</description>
		<graphicData>
			<texPath>InfantryTurret/FT_AntiTankGunPlus</texPath>
			<drawOffset>(0,0,0)</drawOffset>
		</graphicData>
		<soundInteract>Artillery_ShellLoaded</soundInteract>
		<statBases>
			<SightsEfficiency>2.3</SightsEfficiency>
			<ShotSpread>0.01</ShotSpread>
			<SwayFactor>1.41</SwayFactor>
			<RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
			<Mass>205</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<recoilAmount>0</recoilAmount>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_762x385mmRCannonShell_HEAT</defaultProjectile>
				<warmupTime>3</warmupTime>
				<minRange>5</minRange>
				<range>125</range>
				<soundCast>120mm</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>32</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<recoilPattern>Mounted</recoilPattern>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>1</magazineSize>
				<reloadTime>4</reloadTime>
				<ammoSet>AmmoSet_762x385mmRCannonShell</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiAimMode>AimedShot</aiAimMode>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
		<defName>FT_TurretAutoCannon_Twin</defName>
		<label>20mm anti-air gun</label>
		<description>A rapid-fire cannon with capability to shoot down aircraft.</description>
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>InfantryTurret/FT_WheeledTripod</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2.5,2.5)</drawSize>
			<drawOffset>(0,0,0)</drawOffset>
		</graphicData>
		<size>(2,1)</size>
		<thingClass>CombatExtended.Building_TurretGunCE</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<stealable>false</stealable>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<fillPercent>0.66</fillPercent>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<tickerType>Normal</tickerType>
		<designationCategory>Security</designationCategory>
		<placeWorkers>
			<li>PlaceWorker_TurretTop</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>GunTurrets</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Forbiddable" />
			<li Class="CompProperties_Mannable">
				<manWorkType>Violent</manWorkType>
			</li>
		</comps>
		<statBases>
			<Mass>85</Mass>
			<MaxHitPoints>750</MaxHitPoints>
			<Flammability>0</Flammability>
			<WorkToBuild>3500</WorkToBuild>
			<Beauty>-2</Beauty>
		</statBases>
		<costList>
			<Steel>180</Steel>
			<ComponentIndustrial>7</ComponentIndustrial>
		</costList>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<building>
			<turretBurstWarmupTime>1.2</turretBurstWarmupTime>
			<turretBurstCooldownTime>0.75</turretBurstCooldownTime>
			<turretTopDrawSize>2</turretTopDrawSize>
			<turretGunDef>FT_Gun_Autocannon_Twin</turretGunDef>
		</building>
		<uiIconPath>InfantryTurret/FT_AutoCannonTurret_icon</uiIconPath>
		<uiIconScale>1</uiIconScale>
			<damageMultipliers>
		  <li>
			<damageDef>EMP</damageDef>
			<multiplier>0</multiplier>
		  </li>
		  <li>
			<damageDef>Stun</damageDef>
			<multiplier>0</multiplier>
		  </li>
		  <li MayRequire="Ludeon.RimWorld.Biotech">
				<damageDef>MechBandShockwave</damageDef>
				<multiplier>0</multiplier>
		  </li>
		  <li MayRequire="CETeam.CombatExtended">
				<damageDef>Electrical</damageDef>
				<multiplier>0</multiplier>
		  </li>
	</damageMultipliers>
	</ThingDef>
	
	<ThingDef ParentName="BaseWeaponTurret">
		<defName>FT_Gun_Autocannon_Twin</defName>
		<label>autocannon</label>
		<description>A self-loading large-bore cannon designed to attach to a turret.</description>
		<graphicData>
			<texPath>InfantryTurret/FT_AutoCannonGun_Twin</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<soundInteract>Artillery_ShellLoaded</soundInteract>
		<statBases>
          <RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
          <SightsEfficiency>1</SightsEfficiency>
          <ShotSpread>0.3</ShotSpread>
          <SwayFactor>1.15</SwayFactor>
          <Bulk>50</Bulk>
        </statBases>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<recoilAmount>1.6</recoilAmount>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_20x110mmHispano_AP</defaultProjectile>
				<warmupTime>1</warmupTime>
				<range>75</range>
				<burstShotCount>12</burstShotCount>
				<ticksBetweenBurstShots>3</ticksBetweenBurstShots>
				<soundCast>Shot_Autocannon</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
				<recoilPattern>Mounted</recoilPattern>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>120</magazineSize>
				<reloadTime>5</reloadTime>
				<ammoSet>AmmoSet_20x110mmHispano</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiUseBurstMode>FALSE</aiUseBurstMode>
				<aiAimMode>Snapshot</aiAimMode>
				<aimedBurstShotCount>6</aimedBurstShotCount>
			</li>
		</comps>
	</ThingDef>
	
</Defs>	