				<li>ATGun/FT_AntiAirGun_Base</li>
				<li>ATGun/FT_AntiTankGun_Base</li>
				<li>ATGun/FT_AntiTankGun_Base_Sec</li>
				<li>FT_ConcreteArtilleryBase/TurretArtillery_Base_AA</li>
			</randomGraphics>
		</li>
    </comps>
    <building>
		<turretGunDef>FT_Gun_TurretAA</turretGunDef>
		<turretTopDrawSize>4</turretTopDrawSize>
		<turretBurstWarmupTime>1.25</turretBurstWarmupTime>   <!--================冷卻與瞄準時間================-->
		<turretBurstCooldownTime>1.0</turretBurstCooldownTime>
    </building>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <costList>
		<Steel>350</Steel>
		<ComponentIndustrial>3</ComponentIndustrial>
		<ReinforcedBarrel>1</ReinforcedBarrel>
    </costList>
    <researchPrerequisites>
		<li>FT_IndustrialCannon</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>FT_Gun_TurretAA</defName>
    <label>Anti Air cannon</label>
    <description>An Autocannon designed to defend the area of skies, but also a nice weapon for ground targets.</description>
    <graphicData>
		<texPath>ATGun/FT_AAGun</texPath>
    </graphicData>
    <soundInteract>Artillery_ShellLoaded</soundInteract>
    <statBases>
		<RangedWeapon_Cooldown>2.3</RangedWeapon_Cooldown>
		<SightsEfficiency>2.18</SightsEfficiency>
        <ShotSpread>0.01</ShotSpread>
        <SwayFactor>1.38</SwayFactor>
    </statBases>
	<weaponTags>
		<li>TurretGun</li>
	</weaponTags>
    <verbs>
		<li Class="CombatExtended.VerbPropertiesCE">
            <recoilAmount>1.35</recoilAmount>
            <verbClass>CombatExtended.Verb_ShootCE</verbClass>
            <hasStandardCommand>true</hasStandardCommand>
            <defaultProjectile>Bullet_20x138mmB_AP</defaultProjectile>
            <warmupTime>1.25</warmupTime>
            <minRange>3.9</minRange>
            <range>90</range>
            <burstShotCount>4</burstShotCount>
            <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
            <soundCast>Shot_Autocannon</soundCast>
            <soundCastTail>GunTail_Heavy</soundCastTail>
            <muzzleFlashScale>12</muzzleFlashScale>
            <recoilPattern>Mounted</recoilPattern>
		</li>
    </verbs>
    <comps>
		<li Class="CombatExtended.CompProperties_AmmoUser">
            <magazineSize>20</magazineSize>
            <reloadTime>2</reloadTime>
            <ammoSet>AmmoSet_20x138mmB</ammoSet>   
		</li>
		<li Class="CombatExtended.CompProperties_FireModes">
            <aiUseBurstMode>FALSE</aiUseBurstMode>
            <aiAimMode>Snapshot</aiAimMode>
            <aimedBurstShotCount>2</aimedBurstShotCount>
            <noSingleShot>true</noSingleShot>		
		</li>
		<li Class="Fortification.CompProperties_CastFlecker">
			<fleck>DustPuff</fleck>
			<onGroundOverride>true</onGroundOverride>
			<burstAmount>10</burstAmount>
			<burstSway>30</burstSway>
			<burstAngle>0</burstAngle>
			<fleckSizeRange>(1,2)</fleckSizeRange>
			<burstSpeedRange>(-1.2,-0.7)</burstSpeedRange>
			<burstOffsetRange>(1,3)</burstOffsetRange> 
		</li>
	</comps>
  </ThingDef>

