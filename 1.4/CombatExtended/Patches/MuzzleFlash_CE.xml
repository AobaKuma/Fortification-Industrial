<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Muzzle Flash</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="FT_Gun_Autocannon_Twin"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(2,2)</drawSize>
							<offsets>
								<li>(0.9,0.1)</li>
								<li>(0.9,-0.1)</li>
							</offsets>
							<isAlternately>true</isAlternately>
						</li>
					</value>
				</li>
			
		    </operations>
		</match>
	</Operation>
</Patch>