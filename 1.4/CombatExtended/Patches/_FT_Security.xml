          <li>TurretGun</li>
        </weaponTags>
      </li>

      <!-- Recoilless Rifle -->
      <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
        <defName>FT_Gun_Recoilless</defName>
        <statBases>
          <RangedWeapon_Cooldown>2.3</RangedWeapon_Cooldown>
