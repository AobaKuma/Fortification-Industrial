<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase" MayRequire="co.uk.epicguru.rimforgepoles">
    <defName>FT_PowerPole</defName>
    <label>power pole</label>
    <description>A concrete power pole, using tin or copper cables to carry an electrical current.
Connect to other power poles using the 'link' button, or select multiple power poles and press the 'auto-link' button.</description>
    <thingClass>RimForge.Buildings.Building_PowerPole</thingClass>
    <graphicData>
      <texPath>PowerPole/building</texPath>
      <graphicClass>Graphic_Multi</graphicClass>     
      <drawSize>(2,2)</drawSize>
      <drawOffset>(0,0,0.5)</drawOffset>
      <drawRotated>true</drawRotated>
      <shadowData>
        <volume>(0.3, 0.9, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
    </graphicData>
    <defaultPlacingRot>East</defaultPlacingRot>
    <passability>PassThroughOnly</passability>
    <designationCategory>Power</designationCategory>
    <drawerType>RealtimeOnly</drawerType>
    <selectable>true</selectable>
    <canOverlapZones>true</canOverlapZones>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <tickerType>Rare</tickerType>
    <drawOffscreen>true</drawOffscreen>
    <category>Building</category>
    <altitudeLayer>PawnUnused</altitudeLayer>
    <pathCost>20</pathCost>
    <size>(1, 1)</size>
    <costList>
      <FT_BlocksConcrete>12</FT_BlocksConcrete>
	    <Steel>5</Steel>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
      <li>RimForge.Buildings.PlaceWorker_ShowConnectRadius</li>
    </placeWorkers>
    <holdsRoof>true</holdsRoof>
    <fillPercent>1</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <!-- <staticSunShadowHeight>1.5</staticSunShadowHeight> -->
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>750</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>-1</Beauty>
      <Cleanliness>1</Cleanliness>
      <Mass>70</Mass>
    </statBases>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsPower</li>
    </thingCategories>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BuildingBase" MayRequire="oskarpotocki.vfe.mechanoid">
    <defName>FT_DistributionBox</defName>
    <label>distribution box</label>
	  <description>A metal box on a concrete foundation connects to power networks via conduit to extend the range at which electronics can connect to said conduits. Proper implementation can triple the range at which electric current can be utilized.</description>
    <graphicData>
      <texPath>DistributionBox/building</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
      <shadowData>
        <volume>(0.3, 0.2, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <drawerType>MapMeshAndRealTime</drawerType>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <fillPercent>0.75</fillPercent>
	  <specialDisplayRadius>18</specialDisplayRadius>
    <costList>
      <FT_BlocksConcrete>12</FT_BlocksConcrete>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>10</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable">
		</li>
      <li Class="CompProperties_Breakdownable"/>
	  <li>
			<compClass>VFEMech.CompPylon</compClass>
	  </li>
    </comps>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <pathCost>14</pathCost>
    <designationCategory>Power</designationCategory>
    <rotatable>false</rotatable>
	  <placeWorkers>
      <li>VFEMech.PlaceWorker_OnPowerConduit</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>