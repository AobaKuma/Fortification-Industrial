    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>FT_BlocksConcrete</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <FT_BlocksConcrete>75</FT_BlocksConcrete>
    </products>
    <recipeUsers>
      <li>CraftingSpot</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>2</Crafting>
