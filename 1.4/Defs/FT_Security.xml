  <HediffDef>
    <defName>FT_ShellShock</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>shell shock</label>
    <description>Shell shock is a mental disorder characterized by symptoms such as fatigue, tremor, confusion, nightmares and impaired sight and hearing. Often diagnosed when a soldier is unable to function and no obvious cause can be identified.</description>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <lethalSeverity>1</lethalSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
	    <painOffset>0.15</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <painOffset>0.30</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.35</minSeverity>
        <mentalBreakMtbDays>3.0</mentalBreakMtbDays>
        <painOffset>0.50</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>catatonic</label>
        <minSeverity>0.62</minSeverity>
        <mentalBreakMtbDays>0.25</mentalBreakMtbDays>
        <painOffset>0.90</painOffset>
		<capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>1.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

