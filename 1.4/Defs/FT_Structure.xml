<Defs>

	<!-- Base -->

  <ThingDef Name="FT_SandBag_Base" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
	  <soundImpactDefault>Pawn_Melee_Punch_HitPawn</soundImpactDefault>		
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <graphicData>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
      </damageData>
    </graphicData>
	  <stuffCategories>
		<li>Fabric</li>
  	</stuffCategories>	
    <colorPerStuff>
      <li>
        <stuff>Cloth</stuff>
        <color>(139,122,87)</color>
      </li>
      <li>
        <stuff>Synthread</stuff>
        <color>(110,114,77)</color>
      </li>
    </colorPerStuff>	
	  <blockWind>false</blockWind>
	  <neverMultiSelect>true</neverMultiSelect>
	  <holdsRoof>false</holdsRoof>
	  <castEdgeShadows>true</castEdgeShadows>
        <building>
            <allowAutoroof>false</allowAutoroof>
            <isInert>true</isInert>
            <ai_chillDestination>false</ai_chillDestination>
        </building>
	  <blockLight>false</blockLight>
    <repairEffect>ConstructDirt</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>SandbagRubble</filthLeaving>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
  </ThingDef>
	<!-- Sandbag -->	
	
	<ThingDef ParentName="FT_SandBag_Base">
		<defName>FT_Sandbag</defName>
		<label>Military sandbag</label>
		<thingClass>Building</thingClass>
		<description>Bags of locally-sourced dirt or sand, stacked for use as cover. More professional-looking than basic sandbags.</description>
		<graphicData>
			<texPath>FT_Sandbag</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Asymmetric</linkType>
			<linkFlags>
				<li>Sandbags</li>
			</linkFlags>
			<asymmetricLink>
				<linkFlags>
					<li>Rock</li>
				</linkFlags>
			</asymmetricLink>
		</graphicData>
		<uiIconPath>FT_Sandbag_icon</uiIconPath>
		<building>
			<blueprintGraphicData>
				<texPath>FT_Sandbag_blueprint</texPath>
			</blueprintGraphicData>
		</building>	
		<pathCost>50</pathCost>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToBuild>360</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<costStuffCount>7</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.65</fillPercent>
		<coversFloor>false</coversFloor>
		<castEdgeShadows>false</castEdgeShadows>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>	
		<staticSunShadowHeight>0.30</staticSunShadowHeight>
	</ThingDef>
	
	<ThingDef ParentName="FT_SandBag_Base">
		<defName>FT_WallSandbag</defName>
		<label>Military sandbag wall</label>
		<thingClass>Building</thingClass>
		<description>Bags of locally-sourced dirt or sand, stacked for use as wall.</description>
		<graphicData>
			<texPath>FT_SandbagWall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Asymmetric</linkType>
			<linkFlags>
				<li>Sandbags</li>
			</linkFlags>
			<asymmetricLink>
				<linkFlags>
					<li>Wall</li>
					<li>Rock</li>
				</linkFlags>
				<linkToDoors>false</linkToDoors>
			</asymmetricLink>
		</graphicData>
		<uiIconPath>FT_SandbagWall_icon</uiIconPath>
		<building>
			<blueprintGraphicData>
				<texPath>FT_SandbagWall_blueprint</texPath>
			</blueprintGraphicData>
		</building>	
		<statBases>
			<MaxHitPoints>600</MaxHitPoints>
			<WorkToBuild>500</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<blockWind>true</blockWind>
		<holdsRoof>true</holdsRoof>
		<costStuffCount>10</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<fillPercent>1.00</fillPercent>
		<coversFloor>false</coversFloor>
		<castEdgeShadows>false</castEdgeShadows>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>	
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
	 <defName>FT_TankTrap</defName>
    <label>Tank trap</label>
    <description>A solid concrete pillar meant to hinder the movement of vehicles.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
     <texPath>FT_TankTrap</texPath>
     <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.75,0.25,0.75)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.2,0.2)</rect>
      </damageData>
    </graphicData>
    <costList>
      <FT_BlocksConcrete>5</FT_BlocksConcrete>
    </costList>
	  <blockLight>false</blockLight>
    <uiIconPath>FT_TankTrap</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>150</pathCost>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.35</fillPercent>
    <coversFloor>false</coversFloor>
	  <holdsRoof>false</holdsRoof>
  	<castEdgeShadows>false</castEdgeShadows>
	  <tickerType>Never</tickerType>    
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>800</MaxHitPoints>
      <Beauty>-5</Beauty>
      <WorkToBuild>200</WorkToBuild>
      <Flammability>0.0</Flammability>
    </statBases>
    <researchPrerequisites>
      <li>FT_Concrete</li>
    </researchPrerequisites>
    <pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>	
    <building>
      <allowAutoroof>false</allowAutoroof>
	  <ai_chillDestination>false</ai_chillDestination>
	  <expandHomeArea>false</expandHomeArea>	
      <isInert>true</isInert>
      <blueprintGraphicData>
        <texPath>FT_TankTrap_blueprint</texPath>
      </blueprintGraphicData>
    </building>
    <placeWorkers>
      <li>PlaceWorker_NeverAdjacentTrap</li>
    </placeWorkers>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <repairEffect>ConstructMetal</repairEffect>
	</ThingDef>
	
