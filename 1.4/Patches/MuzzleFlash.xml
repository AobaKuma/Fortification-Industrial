<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Muzzle Flash</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="FT_Gun_TurretQuadAA"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshTwo</def>
							<drawSize>(2,2)</drawSize>
							<offsets>
								<li>(1.35,0.3)</li>
								<li>(1.25,-0.3)</li>
								<li>(1.25,0.3)</li>
								<li>(1.35,-0.3)</li>
							</offsets>
							<isAlternately>true</isAlternately>
						</li>
					</value>
				</li>
				
			<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="FT_Gun_QuadMG"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(0.5,0.5)</drawSize>
							<offsets>
								<li>(0.5,0.16)</li>
								<li>(0.5,0.055)</li>
								<li>(0.5,-0.055)</li>
								<li>(0.5,-0.16)</li>
							</offsets>
							<isAlternately>true</isAlternately>
						</li>
					</value>
				</li>
			
		    </operations>
		</match>
	</Operation>
</Patch>