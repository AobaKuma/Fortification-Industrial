<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <ThingDef Name="FT_BaseCannonBuilding" ParentName="BuildingBase" Abstract="True">
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <hasTooltip>true</hasTooltip>
    <interactionCellOffset>(-1,0,-1)</interactionCellOffset>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <tickerType>Normal</tickerType>
    <designationCategory>Security</designationCategory>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <statBases>
      <Beauty>-2</Beauty>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
    </comps>
	  <damageMultipliers>
		  <li>
			<damageDef>EMP</damageDef>
			<multiplier>0</multiplier>
		  </li>
		  <li>
			<damageDef>Stun</damageDef>
			<multiplier>0</multiplier>
		  </li>
		  <li MayRequire="Ludeon.RimWorld.Biotech">
				<damageDef>MechBandShockwave</damageDef>
				<multiplier>0</multiplier>
		  </li>
	  </damageMultipliers>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
	    <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <uiIconScale>1.1</uiIconScale>
  </ThingDef>

  <ThingDef Name="FT_BaseCannonBuilding_Mobile" ParentName="FT_BaseCannonBuilding" Abstract="True">
    <minifiedDef>MinifiedThing</minifiedDef>  <!--================可攜帶性
    ================-->
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <Mass>150</Mass>
      <ShootingAccuracyTurret>1.0</ShootingAccuracyTurret>
    </statBases>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretBurstWarmupTime>1.0</turretBurstWarmupTime>   <!--================冷卻與瞄準時間================-->
      <turretBurstCooldownTime>3.0</turretBurstCooldownTime>
    </building>
  </ThingDef>

  <!-- 單裝防空炮 -->
  <ThingDef ParentName="FT_BaseCannonBuilding_Mobile">
    <defName>FT_TurretAA</defName>
    <label>Anti Air Gun</label>
    <description>A manned autocannon that launches solid metal bullets.It is rapid fired makes it useful for attacking aerial target or enemies in the field.</description>
    <uiIconPath>ATGun/FT_AntiAirGun</uiIconPath>
    <uiIconScale>1.2</uiIconScale>
    <graphicData>
      <texPath>ATGun/FT_AntiAirGun_Base</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.25,3.25)</drawSize>
      <drawOffset>(0,0,0)</drawOffset>
    </graphicData>
    <size>(3,3)</size>
	  <interactionCellOffset>(1,0,-1)</interactionCellOffset><!--操作點在右下方-->
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <statBases>   <!--================血量與重量工作量================-->
      <MaxHitPoints>750</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <WorkToBuild>3000</WorkToBuild>
    </statBases>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shots until barrel change</fuelLabel>
        <fuelGizmoLabel>Barrel durability</fuelGizmoLabel>
        <outOfFuelMessage>Cannot shoot: Needs new reinforced barrel</outOfFuelMessage>
        <fuelFilter>
          <thingDefs>
            <li>ReinforcedBarrel</li>
          </thingDefs>
        </fuelFilter>
        <fuelIsMortarBarrel>true</fuelIsMortarBarrel>
        <fuelCapacity>120</fuelCapacity>
        <fuelMultiplier>120</fuelMultiplier>
        <initialFuelPercent>1</initialFuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <initialAllowAutoRefuel>true</initialAllowAutoRefuel>
		    <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>              <!--重裝填設定-->
		    <initialConfigurableTargetFuelLevel>60</initialConfigurableTargetFuelLevel>
		    <autoRefuelPercent>0</autoRefuelPercent>
        <fuelIconPath>Things/Item/Resource/ReinforcedBarrel/ReinforcedBarrel</fuelIconPath>
      </li>
	    <li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="VanillaFurnitureExpanded.CompProperties_RandomBuildingGraphic">
		  <randomGraphics>
        <li>ATGun/FT_AntiAirGun_Base</li>
        <li>ATGun/FT_AntiTankGun_Base</li>
        <li>ATGun/FT_AntiTankGun_Base_Sec</li>
        <li>FT_ConcreteArtilleryBase/TurretArtillery_Base_AA</li>
      </randomGraphics>
	  </li>
    </comps>
    <building>
      <turretGunDef>FT_Gun_TurretAA</turretGunDef>
      <turretTopDrawSize>4</turretTopDrawSize>
      <turretBurstWarmupTime>1.0</turretBurstWarmupTime>   <!--================冷卻與瞄準時間================-->
      <turretBurstCooldownTime>5.0</turretBurstCooldownTime>
      <buildingTags>
        <li>Artillery_MannedMortar</li>
      </buildingTags>
    </building>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <costList>
      <Steel>350</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <ReinforcedBarrel>1</ReinforcedBarrel>
    </costList>
    <researchPrerequisites>
      <li>FT_IndustrialCannon</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>FT_Gun_TurretAA</defName>
    <label>Anti Air cannon</label>
    <description>An Autocannon designed to defend the area of skies, but also a nice weapon for ground targets.</description>
    <graphicData>
      <texPath>ATGun/FT_AAGun</texPath>
    </graphicData>
    <soundInteract>Artillery_ShellLoaded</soundInteract>
    <statBases>
      <AccuracyTouch>0.35</AccuracyTouch>
      <AccuracyShort>0.67</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>1.0</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
      <Mass>120</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>FT_Bullet_AAShell</defaultProjectile>
        <requireLineOfSight>true</requireLineOfSight>
        <isMortar>false</isMortar>
        <warmupTime>1</warmupTime>
        <minRange>3.9</minRange>
        <range>45</range>
        <ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>8</burstShotCount>
        <soundCast>Shot_Autocannon</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
		<forcedMissRadius>0.1</forcedMissRadius>
      </li>
    </verbs>
    <comps>
		  <li Class="Fortification.CompProperties_CastFlecker">
			<fleck>DustPuff</fleck>
			<onGroundOverride>true</onGroundOverride>
			<burstAmount>10</burstAmount>
			<burstSway>30</burstSway>
			<burstAngle>0</burstAngle>
			<fleckSizeRange>(1,2)</fleckSizeRange>
			<burstSpeedRange>(-1.2,-0.7)</burstSpeedRange>
			<burstOffsetRange>(1,3)</burstOffsetRange> 
		  </li>
		</comps>
  </ThingDef>

