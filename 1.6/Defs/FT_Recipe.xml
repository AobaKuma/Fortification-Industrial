        <effectWorking>CutStone</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <targetCountAdjustment>20</targetCountAdjustment>
    </RecipeDef>

    <RecipeDef ParentName="MakeConcreteBase">
        <defName>FT_Make_ConcreteByStonyJunks</defName>
        <label>Make concrete from junk</label>
        <description>Crush stony junk to turn it into concrete. The junk material must not be burnable or smeltable.</description>
        <ingredientValueGetterClass>Fortified.IngredientValueGetter_Mass</ingredientValueGetterClass>
        <allowMixingIngredients>true</allowMixingIngredients>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Weapons</li>
                        <li>Apparel</li>
                    </categories>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Weapons</li>
                <li>Apparel</li>
            </categories>
            <specialFiltersToDisallow>
                <li>AllowBurnableWeapons</li>
                <li>AllowSmeltable</li>
                <li>AllowBurnableApparel</li>
                <li>AllowSmeltableApparel</li>
            </specialFiltersToDisallow>
        </fixedIngredientFilter>
        <forceHiddenSpecialFilters>
            <li>AllowBurnableWeapons</li>
            <li>AllowSmeltable</li>
            <li>AllowBurnableApparel</li>
            <li>AllowSmeltableApparel</li>
        </forceHiddenSpecialFilters>
        <defaultIngredientFilter>
            <categories>
                <li>Weapons</li>
                <li>Apparel</li>
            </categories>
            <disallowedThingDefs>
                <li>Apparel_ShieldBelt</li>
                <li>Apparel_SmokepopBelt</li>
            </disallowedThingDefs>
        </defaultIngredientFilter>
        <products>
            <FT_BlocksConcrete>20</FT_BlocksConcrete>
        </products>
    </RecipeDef>

