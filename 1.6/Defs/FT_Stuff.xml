    <ThingDef ParentName="ResourceBase">
        <defName>FT_BlocksConcrete</defName>
        <label>concrete</label>
        <description>Bags of concrete dust. Concrete is a very durable building material used in many industrial applications, but ugly to look at.</description>
        <graphicData>
            <texPath>ConcreteBag</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <soundInteract>Stone_Drop</soundInteract>
        <soundDrop>Stone_Drop</soundDrop>
        <useHitPoints>false</useHitPoints>
        <tradeability>Buyable</tradeability>
        <statBases>
            <MaxHitPoints>75</MaxHitPoints>
            <MarketValue>0.9</MarketValue>
            <SharpDamageMultiplier>0.6</SharpDamageMultiplier>
            <BluntDamageMultiplier>1.0</BluntDamageMultiplier>
            <Beauty>-10</Beauty>
            <ConstructionSpeedFactor>0.9</ConstructionSpeedFactor>
            <Mass>0.75</Mass>
        </statBases>
        <burnableByRecipe>false</burnableByRecipe>
        <minRewardCount>10</minRewardCount>
