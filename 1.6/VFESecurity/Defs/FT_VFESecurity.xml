            </li>
        </stages>
    </HediffDef>
	


	  <!-- Fortified Trench -->
	<ThingDef ParentName="BuildingBase">
		<defName>FT_Trench</defName>
		<label>fortified trench</label>
		<description>A trench facility reinforced with reinforced concrete, capable of being constructed in most terrain, with good drainage and neatly poured walls. Crossing it requires climbing up and down, therefore it significantly slows down movement speed. Although it takes a little time to climb out of it, the soldiers inside can get good cover and protection from explosive damage.</description>
		<graphicData>
			<texPath>ConcreteTrench/Trench_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Custom6</li>
			</linkFlags>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<uiIconPath>ConcreteTrench/Trench_MenuIcon</uiIconPath>
		<altitudeLayer>Floor</altitudeLayer>
		<rotatable>false</rotatable>
		<stealable>false</stealable>
		<castEdgeShadows>false</castEdgeShadows>
		<statBases>
			<MaxHitPoints>1000</MaxHitPoints>
			<WorkToBuild>7500</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>0</Beauty>
			<Cleanliness>-5</Cleanliness>
			<TrapMeleeDamage>20</TrapMeleeDamage>
			<TrapSpringChance>1.0</TrapSpringChance>
		</statBases>
		<passability>Standable</passability>
		<drawStyleCategory>Defenses</drawStyleCategory>
		<pathCost>88</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<costList>
			<FT_BlocksConcrete>5</FT_BlocksConcrete>
		</costList>
		<designationCategory>Security</designationCategory>
		<canOverlapZones>false</canOverlapZones>
		<fertility>0</fertility>
		<blockWind>false</blockWind>
		<coversFloor>true</coversFloor>
		<tickerType>Never</tickerType>
		<holdsRoof>false</holdsRoof>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<constructEffect>ConstructMetal</constructEffect>
		<repairEffect>ConstructMetal</repairEffect>
		<building>
			<isInert>true</isInert>
			<ai_neverTrashThis>true</ai_neverTrashThis>
			<ai_chillDestination>false</ai_chillDestination>
			<isEdifice>false</isEdifice>
			<blueprintGraphicData>
				<texPath>Things/Security/Trench/Trench_Blueprint_Atlas</texPath>
			</blueprintGraphicData>
		</building>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>0.5</multiplier>
			</li>
		</damageMultipliers>
		<clearBuildingArea>false</clearBuildingArea>
		<researchPrerequisites>
			<li>VWE_TrenchWarfare</li>
		</researchPrerequisites>
		<modExtensions>
			<li Class="VFESecurity.HediffOnBuildingExtension">
				<hediff>FT_VFES_TrenchTerrain</hediff>
			</li>
		</modExtensions>
		<placeWorkers>
			<li>Fortified.PlaceWorker_NoAltitudeLayerOccupy</li>
		</placeWorkers>
	</ThingDef>

